<!--
  ~ Container that will hold all Fragments and acts as NavigationHost.
  ~ The navigation graph is usually defined as a property: app:navGraph="@navigation/nav_graph".
  ~ However, as an argument is passed to the start Destination,
  ~ then the graph has been set programmatically.
  -->
<androidx.fragment.app.FragmentContainerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navHostFragment"
    android:name="androidx.navigation.fragment.NavHostFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:defaultNavHost="true"
    tools:context=".ui.activities.MainActivity" />